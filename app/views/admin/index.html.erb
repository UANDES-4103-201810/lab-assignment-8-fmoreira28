<p id="notice"><%= notice %></p>
<div class="col-md-3"></div>
<div class="col-md-4">
  <div class="container-fluid">
    <h1>Users</h1>

    <table class="table">
      <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Username</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.username %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Show', user_products_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path %>

  </div>
</div>